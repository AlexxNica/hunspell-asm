{
  "name": "hunspell-asm",
  "version": "0.0.1",
  "description": "",
  "main": "./dist/src/index.js",
  "types": "./dist/src/index.d.ts",
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    },
    "validate-commit-msg": {
      "types": [
        "feat",
        "fix",
        "docs",
        "style",
        "refactor",
        "perf",
        "test",
        "chore",
        "revert",
        "ci",
        "build"
      ]
    }
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write --single-quote --print-width 120 --jsx-bracket-same-line true",
      "tslint --fix --type-check --project tsconfig.json",
      "git add"
    ]
  },
  "scripts": {
    "prepublish": "npm-run-all build test",
    "precommit": "lint-staged",
    "prepush": "npm-run-all build test",
    "commitmsg": "validate-commit-msg",
    "test": "jest --config jest.json",
    "test:cover": "npm-run-all \"test:spec -- --coverage --no-cache --runInBand\"",
    "lint": "tslint src/**/*.ts test/**/*.ts --type-check --project tsconfig.json",
    "lint:staged": "lint-staged",
    "build": "shx rm -rf ./dist && tsc && shx cp -r ./src/lib ./dist/cjs/src",
    "commit": "git-cz -S",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kwonoj/hunspell-asm.git"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kwonoj/hunspell-asm/issues"
  },
  "homepage": "https://github.com/kwonoj/hunspell-asm#readme",
  "devDependencies": {
    "@types/chai": "^4.0.1",
    "@types/jest": "^20.0.2",
    "@types/node": "^8.0.9",
    "chai": "^4.0.2",
    "commitizen": "^2.9.6",
    "conventional-changelog-cli": "^1.3.1",
    "husky": "^0.14.3",
    "jest": "^20.0.4",
    "lint-staged": "^4.0.1",
    "npm-run-all": "^4.0.2",
    "prettier": "^1.5.2",
    "rxjs": "^5.4.2",
    "shx": "^0.2.2",
    "ts-jest": "^20.0.7",
    "ts-node": "^3.2.0",
    "tslint": "^5.5.0",
    "tslint-no-unused-expression-chai": "0.0.2",
    "typescript": "^2.4.1",
    "validate-commit-msg": "^2.12.2"
  },
  "dependencies": {
    "cuid": "^1.3.8",
    "tslib": "^1.7.1"
  }
}
